<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hyj.lib.porgress.HorizontalProgressBar
            android:id="@+id/proBarPb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:progress="0"
            hyj:pbReachColor="#ffff0000"
            hyj:pbTextColor="#ffff0000"
            hyj:pbUnreachColor="#44ff0000" />

        <com.hyj.lib.porgress.HorizontalProgressBar
            android:id="@+id/proBarPb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:progress="100"
            hyj:pbTextColor="#44ff0000"
            hyj:pbUnreachColor="#ffff0000" />

        <com.hyj.lib.porgress.HorizontalProgressBar
            android:id="@+id/proBarPb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:progress="30"
            hyj:pbTextColor="#44ff0000"
            hyj:pbUnreachColor="#ffff0000" />

        <com.hyj.lib.porgress.CircleProgressBar
            android:id="@+id/proBarPb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:progress="30"
            hyj:pbTextColor="#f00f0000"
            hyj:pbUnreachColor="#ffff0000"
            hyj:radius="20dp" />

        <com.hyj.lib.porgress.CircleProgressBar
            android:id="@+id/proBarPb5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:progress="0"
            hyj:pbTextColor="#ff000000"
            hyj:pbTextSize="30sp"
            hyj:pbUnreachColor="#44ff0000"
            hyj:radius="60dp" />
    </LinearLayout>
</ScrollView>
